FROM rust:latest

RUN apt-get update && apt-get install -y \
    bash \
    curl \
    postgresql-client \
    libssl-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Add Rust/Cargo binaries to PATH
ENV PATH="/usr/local/cargo/bin:/root/.bun/bin:${PATH}"

# Rust/wasm + dev tools
RUN rustup target add wasm32-unknown-unknown \
    && cargo install cargo-watch trunk wasm-bindgen-cli

# Install Bun for Tailwind or other JS tooling
RUN curl -fsSL https://bun.sh/install | bash

# Development environment variables
ENV RUST_LOG=debug
ENV RUST_BACKTRACE=1
ENV PRODUCTION=0
ENV HOST=0.0.0.0
ENV PORT=8080

WORKDIR /app
